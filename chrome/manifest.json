{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "0.9.1",
  "description": "__MSG_extensionDescription__",
  "icons": { "16": "img/icon-16.png",
             "48": "img/icon-48.png",
             "128": "img/icon-128.png" },

  "default_locale": "en",

  "homepage_url": "https://batea.docgraph.com",

  "background": {
    "scripts": [
      "lib/jquery-2.1.1.js",
      "lib/url-tld.min.js",
      "const.js",
      "background.js"
    ]
  },

  "options_page": "options.html",

  "page_action": {
    "default_popup": "forager.html"
  },

  "minimum_chrome_version": "36.0",
  "offline_enabled": false,
  "permissions": [
    "tabs",
    "history",
    "storage",
    "http://*/*",
    "https://*/*",
    "http://*.wikipedia.org/*",
    "https://*.wikipedia.org/*"
  ],

  "content_scripts": [
    {
      "matches":
      [
        "http://*.wikipedia.org/*",
        "https://*.wikipedia.org/*"
      ],
      "js":
      [
        "lib/jquery-2.1.1.js",
        "const.js",
        "wikipedia.js"
      ]
    }
  ],

  "web_accessible_resources": [
    "css/*",
    "fonts/*",
    "comment.html",
    "comment.js",
    "forager.html",
    "forager.js"
  ]
}
